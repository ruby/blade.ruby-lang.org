<% if notice %>
  <div class="mb-4 p-4 bg-green-50 dark:bg-green-900 border border-green-200 dark:border-green-700 text-green-800 dark:text-green-200 rounded-lg">
    <%= notice %>
  </div>
<% end %>

<div class="mb-6">
  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">Search Messages</h1>
  <p class="text-gray-600 dark:text-gray-400 mt-2">Search across all mailing list archives</p>
</div>

<div class="mb-6 bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 p-6">
  <%= form_with(method: :get, class: "space-y-4") do |form| %>
    <div class="flex gap-2">
      <%= form.text_field :q, value: params[:q], placeholder: "Enter search query...", class: "flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-red-500 dark:focus:ring-red-400" %>
      <%= form.submit "Search", class: "px-6 py-2 font-medium rounded bg-red-600 dark:bg-red-500 text-white hover:bg-red-700 dark:hover:bg-red-600 transition-colors" %>
    </div>

    <div>
      <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Select mailing lists:</p>
      <div class="grid grid-cols-2 gap-3">
        <%
          [
            [:ruby_talk, 'ruby-talk (English)'],
            [:ruby_core, 'ruby-core (For developing Ruby itself, English)'],
            [:ruby_list, 'ruby-list (Japanese)'],
            [:ruby_dev, 'ruby-dev (For developing Ruby itself, Japanese)'],
          ].each do |name, label|
        %>
          <label class="flex items-center gap-2 text-sm text-gray-700 dark:text-gray-300 cursor-pointer">
            <%= form.check_box name, {checked: params[name] != '0'}, class: "w-4 h-4 text-red-600 bg-gray-100 dark:bg-gray-900 border-gray-300 dark:border-gray-600 rounded focus:ring-red-500 dark:focus:ring-red-400 focus:ring-2" %>
            <span><%= label %></span>
          </label>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @messages.present? %>
  <div class="space-y-4">
    <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Search Results</h2>
    <% @messages.each do |message| %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 p-5 hover:shadow-lg transition-shadow">
        <div class="mb-2">
          <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200">
            <%= message.list.name %>:<%= message.list_seq %>
          </span>
        </div>
        <h3 class="text-lg font-semibold mb-2">
          <%= link_to without_list_prefix(message.subject), [message.list, message], class: "text-gray-900 dark:text-gray-100 hover:text-red-600 dark:hover:text-red-400 transition-colors" %>
        </h3>
        <div class="text-sm text-gray-600 dark:text-gray-400 line-clamp-3">
          <%= search_snippet(message.body, params[:q]) %>
        </div>
      </div>
    <% end %>
  </div>
<% elsif params[:q].present? %>
  <div class="text-center py-12 text-gray-500 dark:text-gray-400">
    <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
    </svg>
    <p>No results found for "<%= params[:q] %>"</p>
  </div>
<% end %>
